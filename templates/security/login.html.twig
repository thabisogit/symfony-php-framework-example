{% extends 'base.html.twig' %}

{% block body %}
	<h1>Connection!</h1>

	<form action="{{ path('security_login') }}" method="POST">
		<div class="form-group">
			<input type="text" class="form-control" placeholder="Enter Email Address" required name="_username">
		</div>

		<div class="form-group">
			<input type="password" class="form-control" placeholder="Enter Password" required name="_password">
		</div>

		<div class="form-group">
			<button type="submit" class="btn btn-success">Login</button>
		</div>

	</form>



{% endblock %}